# Executioner Web Interface Environment Configuration
# Copy this file to .env and update with your values

# Allowed CORS origins (comma-separated)
VITE_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# API Configuration (when backend is implemented)
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Security Configuration
# Note: In production, encryption keys should be managed server-side
# This is for development/demo purposes only
VITE_ENABLE_ENCRYPTION=true
VITE_SESSION_TIMEOUT=3600000

# Feature Flags
VITE_USE_VALIDATED_EDITOR=true
VITE_ENABLE_SEARCH_FILTER=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_VALIDATION=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Theme Settings
VITE_DEFAULT_THEME=light

# Validation Settings
VITE_MAX_JOB_TIMEOUT=86400
VITE_MAX_RETRIES=10
VITE_MAX_WORKERS=100

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=application/json,text/plain,text/yaml

# Email Configuration Defaults (optional)
VITE_DEFAULT_SMTP_PORT=587
VITE_DEFAULT_EMAIL_ON_SUCCESS=true
VITE_DEFAULT_EMAIL_ON_FAILURE=true