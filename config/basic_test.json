{
    "application_name": "basic_test",
    "email_address": "test@example.com",
    "email_on_success": false,
    "email_on_failure": false,
    "env_variables": {
        "APP_ENV": "test",
        "LOG_LEVEL": "debug"
    },
    "jobs": [
        {
            "id": "job1",
            "description": "First basic job",
            "command": "python3 /home/sjoshi/claudelab/executioner/test_scripts/success_script.py",
            "timeout": 10,
            "env_variables": {
                "TEST_JOB": "job1",
                "TEST_PARAM": "value1"
            }
        },
        {
            "id": "job2",
            "description": "Second job depending on first job",
            "command": "python3 /home/sjoshi/claudelab/executioner/test_scripts/success_script.py",
            "dependencies": ["job1"],
            "timeout": 10,
            "env_variables": {
                "TEST_JOB": "job2",
                "TEST_PARAM": "value2"
            }
        },
        {
            "id": "job3",
            "description": "Third job depending on second job",
            "command": "python3 /home/sjoshi/claudelab/executioner/test_scripts/success_script.py",
            "dependencies": ["job2"],
            "timeout": 10,
            "env_variables": {
                "TEST_JOB": "job3",
                "TEST_PARAM": "value3"
            }
        }
    ]
}
